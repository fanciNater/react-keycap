{
    "compilerOptions": {

        "allowSyntheticDefaultImports": true,
        "baseUrl": "./components",
        "sourceMap": false,
        "allowJs": true,
        "checkJs": false,
        "strictNullChecks": true,
        "alwaysStrict": true,

        "declaration": true,
        "declarationDir": "./es",

        "module": "ES6",
        "jsx": "react",
        "target": "ESNext",
        "outDir": "./es",

        "noStrictGenericChecks": false,
        "noImplicitAny": false,
        "noUnusedLocals": false,
        "noUnusedParameters": false,

        "lib": ["dom","es6"],
        "skipLibCheck": true
    },
    "include": ["./components"],
    "exclude": ["node_modules", "lib", "es"]
}