{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "baseUrl": "./",
        "paths": {
            "keycap": ["components/*"]
        },
        "sourceMap": false,
        "allowJs": true,
        "checkJs": false,
        "strictNullChecks": true,
        "alwaysStrict": true,
        "declaration": true,
        "declarationDir": "./es",
        "jsx": "react",
        "target": "es6",
        "lib": ["dom","es2017"],
        "outDir": "./es",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "noStrictGenericChecks": false,
        "noImplicitAny": false,
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "skipLibCheck": true
    },
    "include": ["./components"],
    "exclude": ["node_modules", "lib", "es", "**/_test_"]
}