{
      "compilerOptions": {
          "allowJs": true,
          "checkJs": false,
          "allowSyntheticDefaultImports": true,
          "alwaysStrict": true,
          "baseUrl": "./components",
          "declaration": true,
          "declarationDir": "./es",
          "jsx": "react",
          "module": "ES6",
          "target": "ESNext",
          "reactNamespace": "React",
          "moduleResolution": "Classic",
          "noImplicitAny": false,
          "noStrictGenericChecks": true,
          "noUnusedLocals": false,
          "noUnusedParameters": false,
          "pretty": false,
          "outDir": "./es",
          "removeComments": true,
          "skipDefaultLibCheck": true,
          "skipLibCheck": true,
          "sourceMap": false
      },
    "include": [
        "./components"
    ],
    "exclude": [
        "node_modules",
        "lib",
        "es"
    ]
}